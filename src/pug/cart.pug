extends base

block meta
  - var title = '100 бонусных рублей, базовый шаблон';

block header
  div(style=container)
    h1(style=h1__large) Здравствуйте, username!
    div(style="margin:0 0 36px 0;")
      h2(style=h1) Вы недавно посещали наш сайт и оставили товары в корзине. Для вашего удобства мы сохранили их в этом письме, чтоб вам легче было к ним вернуться:

block header__readmore
block pos
  +row()
  +row('card-4.png','Пакеты для шин “ДонШина”')
  div(style=container)
    div(style="width:250px;margin:0 auto 15px auto;padding:12px 0 0;")
      table(width="100%" height="100%" border="0" cellspacing="0" cellpadding="0")
        tr
          td(style="width:50%;height:100%;font-size:12px;line-height:12px;color:#525252;text-align:left;align-items:center;") Итого
          td(style="width:50%;height:100%;font-size:18px;line-height:24px;color:#525252;text-align:right;align-items:center;")
            span(style="font-weight:bold;") 29 337.12
            |&nbsp;Р
    table(width="100%" height="100%" border="0" cellspacing="0" cellpadding="0")
      tr
        td(style="padding:0 0 48px 0;text-align:center;")
          +btn('Оформить заказ', '250px')

block pos__readmore
block divider
block category
  div(style=container)
    h1(style=h1) Вам так же может быть интересно:
  - var category = [{bg: 'category-15.png', title: 'щётки', color: '#0079B6'},{bg: 'category-16.png', title: 'свечи зажигания', color: '#0079B6'},{bg: 'category-6.png', title: 'Автохимия', color: '#0079B6'},{bg: 'category-7.png', title: 'Автомасла', color: '#0079B6'}]
  table(style="margin:0 0 16px 0;" width="100%" height="100%" border="0" cellspacing="0" cellpadding="0")
    tr
      each category__item in category
        td(style="width:25%;height:100%;align-items:top;")
          +category(category__item.bg,category__item.title,category__item.color)

block category__readmore
  div(style=container)
    table(width="100%" height="100%" border="0" cellspacing="0" cellpadding="0")
      tr
        td(style="padding:8px 0 24px 0;text-align:center;")
          +btn('больше товаров на сайте', '330px')

block wrapper
  div(style=container)
    +banner('banner-1.png','Шиномонтаж в<br>Ростове-на-Дону','Записаться онлайн', '206px', '8')
    +banner('banner-2.png','Подбор запчастей<br>по VIN-коду','Смотреть на сайте', '248px', '34', '#fff')
